<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_book"
    tools:context=".LibrosBuscados">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="8dp"
        android:background="@drawable/gradient_book">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBack"
            android:layout_width="20dp"
            android:layout_height="34dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_back_purple"
            android:textSize="24sp"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultados de la bÃºsqueda"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="15dp"
            android:textSize="28sp"
            android:textColor="@color/cardSubtitle"/>
    </LinearLayout>

    <GridView
        android:id="@+id/libros_buscados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:verticalSpacing="20dp"
        android:numColumns="2"
        android:paddingHorizontal="20dp"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        />

</LinearLayout>